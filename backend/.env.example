# Database Configuration
# For local PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/todo_db
# For Neon Serverless PostgreSQL:
# DATABASE_URL=postgresql://user:password@ep-xxx.us-east-2.aws.neon.tech/todo_db?sslmode=require
DATABASE_URL=postgresql://user:password@localhost:5432/todo_db

# JWT Configuration (from Better Auth)
# Secret key for JWT verification - get this from your Better Auth configuration
JWT_SECRET_KEY=your-secret-key-here-change-in-production
# Algorithm used for JWT signing (HS256 or RS256)
JWT_ALGORITHM=HS256

# Application Configuration
APP_NAME=Todo REST API
DEBUG=True

# CORS Configuration (optional)
# CORS_ORIGINS=http://localhost:3000,http://localhost:8080
